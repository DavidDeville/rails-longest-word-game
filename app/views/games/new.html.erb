<h1>New game</h1>

<div class="container">
  <div class="letters">
    <% @letters.each do |letter| %>
        <span class="letter"><%= letter.upcase %></span>
    <% end %>
  </div>
</div>
<div>
  <h2>What is the longest word you can find?</h2>
  <%= form_with url: "/score", data: { turbo: false }, method: :post do |form| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <%= form.text_field :answer %>
    <%= form.submit "Play", class: 'play-btn' %>
  <% end %>
</div>
